{
  "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "rootDirs": ["./src", "./tests"],
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true,
      "resolveJsonModule": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}